<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="CameraToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!-- Bo góc 8dp: khá vuông -->
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#479D4A</item>

        <!-- Gán selector màu nền & chữ -->
        <item name="backgroundTint">@color/toggle_bg</item>
        <item name="android:textColor">@color/toggle_text</item>

        <!-- Padding chữ cho cân đối -->
        <item name="android:paddingHorizontal" tools:targetApi="26">16dp</item>
        <item name="android:paddingVertical" tools:targetApi="26">8dp</item>
    </style>
</resources>
