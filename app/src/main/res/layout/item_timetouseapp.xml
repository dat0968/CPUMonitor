<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnl_itemTimetoUseApp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Icon ứng dụng -->
    <ImageView
        android:id="@+id/img_app_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_launcher_foreground" />

    <!-- Tên ứng dụng và thanh SeekBar -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Tên ứng dụng (một dòng) -->
        <TextView
            android:id="@+id/txtapp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên ứng dụng rất dài"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Thanh SeekBar và thời gian sử dụng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <!-- SeekBar -->
            <SeekBar
                android:id="@+id/skb_usage_seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:progress="50"
                android:max="100"
                android:thumb="@null"
                android:progressTint="#3F51B5"
                android:minHeight="6dp"
                android:layout_marginEnd="8dp" />

            <!-- Thời gian sử dụng -->
            <TextView
                android:id="@+id/txt_usage_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 giờ 23 phút"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
